<?xml version="1.0" encoding="UTF-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.cstc.ShareJewlryApp.Mycontrols.MyCenterItem" 
             BackgroundColor="Transparent">
    <ContentView.Content>
        <StackLayout x:Name="st_father" Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="10" HeightRequest="40" Padding="10,0,10,0">
            <Image x:Name="img_left" Source="diamond.png" HorizontalOptions="Start" VerticalOptions="Center"  BackgroundColor="Transparent" HeightRequest="10" WidthRequest="10" />
            <Label x:Name="lb_left"   Text="" HorizontalOptions="Start" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" BackgroundColor="Transparent" />
            <Label x:Name="lb_right" Text="" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="End" VerticalTextAlignment="Center" BackgroundColor="Transparent"/>
            <Image x:Name="img_right" Source="right_arrow.png"  HorizontalOptions="End" VerticalOptions="Center" BackgroundColor="Transparent" HeightRequest="10" WidthRequest="10"  />
        </StackLayout>
    </ContentView.Content>
</ContentView>